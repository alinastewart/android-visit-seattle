<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.example.visitseattle.MainActivity">

    <TextView
        android:id="@+id/hotels"
        style="@style/CategoryStyle"
        android:background="@color/category_hotels"
        android:text="@string/category_hotels" />

    <TextView
        android:id="@+id/restaurants"
        style="@style/CategoryStyle"
        android:background="@color/category_restaurants"
        android:text="@string/category_restaurants" />

    <TextView
        android:id="@+id/museums"
        style="@style/CategoryStyle"
        android:background="@color/category_museums"
        android:text="@string/category_museums" />

    <TextView
        android:id="@+id/malls"
        style="@style/CategoryStyle"
        android:background="@color/category_malls"
        android:text="@string/category_malls" />

    <TextView
        android:id="@+id/gardens"
        style="@style/CategoryStyle"
        android:background="@color/category_gardens"
        android:text="@string/category_gardens"/>

</LinearLayout>
